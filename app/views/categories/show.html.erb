<h2>Category</h2>
<div class='col-md-3'>
<form role="form">
	<fieldset disabled>
		<div class="form-group">
    	  <label for="inputDisplayID">ID</label>
    	  <input type="text" class="form-control" id="inputDisplayID" placeholder="<%= @category.id %>">
  	</div>
		<div class="form-group">
    	  <label for="inputDisplayName">Name</label>
    	  <input type="text" class="form-control" id="inputDisplayName" placeholder="<%= @category.name %>">
  	</div>
    <div class="form-group">
        <label for="inputDisplayProducts">Products</label>
        <select name="product_id" id="inputDisplayProducts" class="form-control" size=8>
          <% @category.products.each do |product| %>
            <option value="<%= product.id %>"><%= product.name %></option>
          <% end %>
          </select>
    </div>
	</fieldset>
</form>
</div>
